<body>
     <script>
        $(document).ready(function(){
            $(playButton).click(function(){
                $(popup).removeClass("hideIt");
                $(popup2).removeClass("hideIt");
                $(popup).animate({up: '250px', height: '+=200px', width: '+=200px'}, "fast");
            });
        });
    
        $(document).ready(function(){
            $(popup2).click(function(){
                $(popup).addClass("hideIt");
                $(popup2).addClass("hideIt");
                $(errorMessage).addClass("hideIt");
                $(errorDiv).addClass("hideIt");
                $(errorMessage).addClass("small");
                $(popup).animate({height: '-=200px', width: '-=200px'}, "fast");
            });
        });
    </script>

    <header id = "home-header" class="d-flex flex-wrap justify-content-center py-3">
        <a id = "name" href="/" class="d-flex align-items-center mb-3 mb-md-0 link-body-emphasis text-decoration-none">
            <i class="bi bi-rocket-takeoff-fill"></i>
            <p id = "dream" class="fs-4">DreamLock</p>
        </a>
    </header>

        <% if(locals.badInput) { %>
            <% if(badInput == true){ %>
                <script>
                    $(document).ready(function(){
                        $(popup).removeClass("hideIt");
                        $(popup2).removeClass("hideIt");
                        $(errorMessage).removeClass("hideIt");
                        $(errorMessage).removeClass("small");
                        $(errorDiv).removeClass("hideIt");
                        $(popup).css({height: '550px', width: '500px'});
                    });
                </script>
            <% } %>
        <% } %>
        <div class = "playContainer">
            <button id = "playButton" class = "playButton"><img id = "playPlay" src = "images/playButton.png"></button>

            <div class = "hideIt" id = "popup2"></div>
            <div class = "hideIt playContainer" id = "popup">
                <form id = "myForm" method = "post">

                    <div id = "errorDiv" class = "hideIt"><p id = "errorMessage" class = "small hideIt">You must enter a session style!</p></div>

                    <div>
                        <select name = "styleSelect" id = "o">
                            <option value = "0" class = "o" selected value="0">Study Style:</option>
                            <option value = "Grind" class = "o" value="1">Grind üöÄ</option>
                            <option value = "Pomodoro" class = "o" value="2">Pomodoro ‚è≥</option>
                            <option value = "Chill" class = "o" value="3">Chill üéµ</option>
                        </select>
                    </div>
                    <script>
                        var i = 0;
                        var j = 0;
                        $(document).ready(function(){
                            $(glassBoxPlus).click(function(){
                                if($(glassBox).html() >= 10){

                                }else{
                                    $(glassBox).html(i+=1);
                                    $('[name = "hours"]').attr("value", `${i}`);
                                }  
                            });
                        });
                        $(document).ready(function(){
                            $(glassBoxMin).click(function(){
                                if($(glassBox).html() != 0){
                                    $(glassBox).html(i-=1);
                                    $('[name = "hours"]').attr("value", `${i}`);
                                }
                            });
                        });
                        $(document).ready(function(){
                            $(glassBoxMinPlus).click(function(){
                                if($(glassBox2).html() >= 59){

                                }else{
                                    $(glassBox2).html(j+=1);
                                    $('[name = "mins"]').attr("value", `${j}`);
                                }  
                            });
                        });
                        $(document).ready(function(){
                            $(glassBoxMinMin).click(function(){
                                if($(glassBox2).html() != 0){
                                    $(glassBox2).html(j-=1);
                                    $('[name = "mins"]').attr("value", `${j}`);
                                }
                            });
                        });

                    </script>

                    <div><h5 id = "hours">Hours</h5></div>
                    <div id = "timeBox">
                        <div id = "glassBoxMin">-</div>
                        <input id = "iHours" class = "gone" value = "0" name = "hours">
                        <div id = "glassBox">0</div>
                        <div id = "glassBoxPlus"><div>+</div></div>
                    </div>

                    <div><h5 id = "hours">Minutes</h5></div>
                    <div id = "timeBox">
                        <div id = "glassBoxMinMin">-</div>
                        <input id = "iMins" class = "gone" value = "0" name = "mins">
                        <div id = "glassBox2">0</div>
                        <div id = "glassBoxMinPlus"><div>+</div></div>
                    </div>

                     <input id="go" type="submit" value="Lets go!" formaction="/work">

                </form>
